---
import { TITLE } from '../../lib/const.astro';

const description =
  'İzmir Kemalpaşa bölgesinde bulunan "Kemalpaşa İbrahim-Hüsniye Özdurakoğlu Aile Sağlığı Merkezi" vatandaşlarımıza daha çağdaş hizmet verebilmek için modern, kolay ulaşılabilir, yeni binasında; koruyucu sağlık hizmeti, bağışıklama, ayaktan tedavi gibi temel görevleri ile çağın gereklerine uygun şekilde dizayn edilmiştir. Kurumumuzda, sahip olduğumuz etik değerleri muhafaza ederek, bizden sağlık hizmeti talep eden bireylerin beklentilerini en iyi şekilde karşılamaya, insana saygı duymayı ve bundan dolayı hastalarımıza gerekli ilgi ve özeni göstermeye gayret ediyoruz.';
const subtitle = 'İzmir İl Sağlık Müdürlüğü İletişim';
const phone = 'Tel: +90 (232) 411 81 11';
const link = 'https://www.ism.gov.tr';
---

<section id="homepage" class="relative min-h-[80vh] flex items-center py-20 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-teal-900/90 to-teal-800/80 z-10"></div>

  <div class="container mx-auto px-4 relative z-20">
    <div class="max-w-3xl">
      <div class="text-4xl font-bold text-white mb-6 animate-fade-in md:text-5xl md:leading-tight leading-tight">
        Kemalpaşa İbrahim-Hüsniye Özdurakoğlu Aile Sağlığı Merkezi
      </div>

      <div class="space-y-6 text-gray-100">
        <p class="text-lg leading-relaxed animate-fade-in" style="animation-delay: 0.2s">
          {description}
        </p>

        <div class="space-y-3 animate-fade-in" style="animation-delay: 0.4s">
          <h2 class="text-xl font-semibold text-teal-300">
            {subtitle}
          </h2>

          <div class="flex flex-col space-y-2">
            <a
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-white hover:text-teal-300 transition-colors group"
            >
              <i class="fa fa-link mr-2 text-teal-400 group-hover:text-teal-300 transition-colors"></i>
              {link}
            </a>

            <a href="tel:+902324118111" class="inline-flex items-center text-white hover:text-teal-300 transition-colors group">
              <i class="fa fa-phone mr-2 text-teal-400 group-hover:text-teal-300 transition-colors"></i>
              {phone}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
  }

  #homepage {
    background-image: url('/images/hero-bg.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>
