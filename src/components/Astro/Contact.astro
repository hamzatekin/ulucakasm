---
import Maps from './Maps.astro';
---

<section id="contact" class="py-20 relative">
  <div class="container mx-auto px-4">
    <div class="flex flex-col items-center mb-12 text-center">
      <h2 class="text-4xl font-bold text-gray-800 animate-fade-in uppercase">İLETİŞİM</h2>
      <div class="w-24 h-1 bg-emerald-600 mx-auto mt-4 rounded-full"></div>
    </div>
    <div class="w-full">
      <div class="w-full rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
        <div class="h-[500px]">
          <div id="googleMap" class="w-full h-full">
            <Maps />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-item {
    text-align: center;
    padding: 1.5rem;
    border-radius: 1rem;
    transition: all 0.3s ease;
  }

  .contact-item:hover {
    background: rgba(16, 185, 129, 0.05);
  }

  .icon-box {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }
</style>
