---
import Maps from '../Svelte/Maps.svelte';
---

<section id="contact" class="contact_section layout_padding">
  <div class="container">
    <div class="heading_container heading_center mb-12">
      <h2 class="animate-fade-in">İLETİŞİM</h2>
      <div class="w-24 h-1 bg-emerald-600 mx-auto mt-4 rounded-full"></div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="map_container rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="map h-[500px]">
            <div id="googleMap" class="w-full h-full">
              <Maps client:idle />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-item {
    text-align: center;
    padding: 1.5rem;
    border-radius: 1rem;
    transition: all 0.3s ease;
  }

  .contact-item:hover {
    background: rgba(16, 185, 129, 0.05);
  }

  .icon-box {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }
</style>
