---
import { Image } from 'astro:assets';
import LightboxModal from './LightboxModal.astro';
import frontSide from '../../assets/images/asm/front-side.webp';
import interior1 from '../../assets/images/asm/interior-1.webp';
import interior2 from '../../assets/images/asm/interior-2.webp';
import interior3 from '../../assets/images/asm/interior-3.webp';
import interior4 from '../../assets/images/asm/interior-4.webp';
import interior5 from '../../assets/images/asm/interior-5.webp';

const images = [
  { src: frontSide, alt: 'Ön görünüş' },
  { src: interior1, alt: 'ASM içi 1' },
  { src: interior2, alt: 'ASM içi 2' },
  { src: interior3, alt: 'ASM içi 3' },
  { src: interior4, alt: 'ASM içi 4' },
  { src: interior5, alt: 'ASM içi 5' },
];
---

<section id="gallery" class="py-20 bg-gradient-to-tr from-[#178066] to-[#1a9177]">
  <div class="container mx-auto px-4">
    <div class="flex flex-col items-center mb-12 text-center">
      <h2 class="text-4xl font-bold text-white animate-fade-in uppercase">GALERİ</h2>
      <div class="w-24 h-1 bg-white mx-auto mt-4 rounded-full"></div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 p-4">
      {
        images.map((image, index) => (
          <div class={`animate-fade-in`} style={`animation-delay: ${index * 0.2}s`}>
            <div
              class="relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer group h-full"
              onclick={`openLightbox('${image.src.src}', '${image.alt}')`}
            >
              <Image
                src={image.src}
                alt={image.alt}
                class="w-full aspect-[4/3] object-cover transform group-hover:scale-110 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="absolute bottom-4 left-4 text-white">
                  <h3 class="text-lg font-semibold">{image.alt}</h3>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <LightboxModal />
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
  }
</style>
