---
import { Image } from 'astro:assets';
import s1 from '../../assets/images/s1.png';
import s2 from '../../assets/images/s2.png';
import s3 from '../../assets/images/s3.png';
import s4 from '../../assets/images/s4.png';
---

<section id="services" class="py-20 bg-gradient-to-b from-gray-50 to-white">
  <div>
    <div class="container mx-auto px-4">
      <div class="flex flex-col items-center mb-12 text-center">
        <h2 class="text-4xl font-bold text-gray-800 animate-fade-in uppercase">HİZMETLERİMİZ</h2>
        <div class="w-24 h-1 bg-emerald-600 mx-auto mt-4 rounded-full"></div>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div>
          <div
            class="flex flex-col items-center mt-6 bg-white rounded-lg p-6 text-center border border-black/10 min-h-[200px] h-full hover:-translate-y-1 hover:shadow-lg transition-all duration-300 group relative"
          >
            <div class="w-[90px] h-[90px] mb-4 bg-[#62d2a2] rounded-full flex justify-center items-center shrink-0">
              <Image
                src={s4}
                alt=""
                class="w-16 h-16 transition-transform duration-300 group-hover:scale-110"
                width={64}
                height={64}
                loading="lazy"
                decoding="async"
              />
            </div>
            <div class="flex-grow flex flex-col justify-between w-full">
              <h5 class="m-0 font-bold text-lg text-gray-800">{'İlk Yardım'.toLocaleUpperCase('tr')}</h5>
            </div>
          </div>
        </div>
        <div>
          <a href="/beslenme" class="block h-full">
            <div
              class="flex flex-col items-center mt-6 bg-white rounded-lg p-6 text-center border border-black/10 min-h-[200px] h-full hover:-translate-y-1 hover:shadow-lg transition-all duration-300 group relative"
            >
              <div class="w-[90px] h-[90px] mb-4 bg-[#62d2a2] rounded-full flex justify-center items-center shrink-0">
                <Image
                  src={s1}
                  alt=""
                  class="w-16 h-16 transition-transform duration-300 group-hover:scale-110"
                  width={64}
                  height={64}
                  loading="lazy"
                  decoding="async"
                />
              </div>
              <div class="flex-grow flex flex-col justify-between w-full">
                <h5 class="m-0 font-bold text-lg text-gray-800">{'Koruyucu Sağlık Hizmeti'.toLocaleUpperCase('tr')}</h5>
              </div>
            </div>
          </a>
        </div>
        <div>
          <div
            class="flex flex-col items-center mt-6 bg-white rounded-lg p-6 text-center border border-black/10 min-h-[200px] h-full hover:-translate-y-1 hover:shadow-lg transition-all duration-300 group relative"
          >
            <div class="w-[90px] h-[90px] mb-4 bg-[#62d2a2] rounded-full flex justify-center items-center shrink-0">
              <Image
                src={s3}
                alt=""
                class="w-16 h-16 transition-transform duration-300 group-hover:scale-110"
                width={64}
                height={64}
                loading="lazy"
                decoding="async"
              />
            </div>
            <div class="flex-grow flex flex-col justify-between w-full">
              <h5 class="m-0 font-bold text-lg text-gray-800">{'Ayaktan Tedavi'.toLocaleUpperCase('tr')}</h5>
            </div>
          </div>
        </div>
        <div>
          <a href="/bagisiklama" class="block h-full">
            <div
              class="flex flex-col items-center mt-6 bg-white rounded-lg p-6 text-center border border-black/10 min-h-[200px] h-full hover:-translate-y-1 hover:shadow-lg transition-all duration-300 group relative"
            >
              <div class="w-[90px] h-[90px] mb-4 bg-[#62d2a2] rounded-full flex justify-center items-center shrink-0">
                <Image
                  src={s2}
                  alt=""
                  class="w-16 h-16 transition-transform duration-300 group-hover:scale-110"
                  width={64}
                  height={64}
                  loading="lazy"
                  decoding="async"
                />
              </div>
              <div class="flex-grow flex flex-col justify-between w-full">
                <h5 class="m-0 font-bold text-lg text-gray-800">{'Bağışıklama'.toLocaleUpperCase('tr')}</h5>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .box {
    background: white;
    padding: 1.5rem;
    border-radius: 0.5rem;
    cursor: pointer;
    border: 1px solid rgba(0, 0, 0, 0.1);
    min-height: 200px;
  }

  .box:hover {
    transform: translateY(-2px);
  }

  .img-box {
    margin-bottom: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .img-box img {
    width: 64px;
    height: 64px;
  }

  .detail-box h5 {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    text-align: center;
    color: #333;
  }

  .heading_container {
    margin-bottom: 3rem;
  }

  .heading_container h2 {
    font-size: 2.5rem;
    font-weight: bold;
    text-align: center;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .department_section {
    padding: 5rem 0;
    background: linear-gradient(to bottom, #f8f9fa, #ffffff);
  }

  @media (max-width: 768px) {
    .box {
      min-height: 180px;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }
</style>
