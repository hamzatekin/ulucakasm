---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import { capitalizeEachWord } from '../lib/utils.js';
import { TITLE } from '../lib/const.astro';

const isProd = import.meta.env.PROD;
const {
  title = capitalizeEachWord(TITLE),
  description = 'Kemalpaşa İbrahim-Hüsniye Özdurakoğlu Aile Sağlığı Merkezi: koruyucu sağlık hizmeti, bağışıklama, ayaktan tedavi ve iletişim bilgileri.',
} = Astro.props;
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <ClientRouter />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
      />
    </noscript>
    {
      isProd && (
        <>
          <link rel="preconnect" href="https://umami.hamzatekin.dev" crossorigin />
          <script defer is:inline async src="https://umami.hamzatekin.dev/script.js" data-website-id="99271bcb-9ff5-49e9-99e8-84ee910a58b4" />
        </>
      )
    }
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body class="bg-white leading-normal tracking-normal" transition:animate="fade">
    <slot />
  </body>
</html>
