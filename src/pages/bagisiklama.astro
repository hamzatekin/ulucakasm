---
import { Image } from 'astro:assets';
import asitakvimi from '../assets/images/asm/asitakvimi.png';

import Layout from '../layouts/Layout.astro';
import Header from '../components/Astro/Header.astro';
import Footer from '../components/Astro/Footer.astro';
---

<Layout
  title="Aşı Takvimi | Kemalpaşa İbrahim-Hüsniye Özdurakoğlu Aile Sağlığı Merkezi"
  description="Aşı takvimi görseli ve aşılamaya dair temel bilgilendirme."
>
  <Header shouldShowBg={false}>
    <div class="w-full bg-gradient-to-br from-[#178066] via-[#1a9177] to-[#14725c] relative overflow-hidden">
      <div class="absolute inset-0 bg-[url('/images/jupiter.svg')] opacity-5"></div>
      <main class="container mx-auto px-4 py-12 max-w-4xl text-white relative">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-emerald-100/90 hover:text-white transition-colors mb-6"
          aria-label="Ana sayfaya dön"
        >
          <span aria-hidden="true">←</span>
          <span class="text-sm font-semibold">Ana Sayfa</span>
        </a>
        <h1 class="text-4xl font-bold text-center mb-8 animate-fade-in">Aşı Takvimi</h1>

        <div
          class="w-full rounded-xl overflow-hidden shadow-xl transform hover:scale-[1.02] transition-transform duration-500 relative bg-white/10 backdrop-blur-sm"
        >
          <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent z-10"></div>
          <Image
            class="w-full h-full object-contain"
            src={asitakvimi}
            alt="Aşı Takvimi"
            sizes="(min-width: 1024px) 720px, 90vw"
            widths={[480, 720, 960]}
            loading="eager"
            decoding="async"
          />
        </div>
      </main>
    </div>
  </Header>
  <Footer />
</Layout>

<style is:inline>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }

  /* Add smooth scrolling to the page */
  html {
    scroll-behavior: smooth;
  }

  /* Enhance text selection */
  ::selection {
    background: rgba(23, 128, 102, 0.3);
    color: white;
  }
</style>
